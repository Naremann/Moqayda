<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.moqayda.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.moqayda.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_registeration"
            app:destination="@id/registeration" />
    </fragment>
    <fragment
        android:id="@+id/registeration"
        android:name="com.example.moqayda.ui.registeration.RegistrationFragment"
        android:label="fragment_registeration"
        tools:layout="@layout/fragment_registeration" />
    <fragment
        android:id="@+id/passwordVerificationFragment"
        android:name="com.example.moqayda.ui.password_verification.PasswordVerificationFragment"
        android:label="fragment_password_verification"
        tools:layout="@layout/fragment_password_verification" >
        <action
            android:id="@+id/action_passwordVerificationFragment_to_passwordChangeFragment"
            app:destination="@id/passwordChangeFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordChangeFragment"
        android:name="com.example.moqayda.ui.password_change.PasswordChangeFragment"
        android:label="fragment_password_change"
        tools:layout="@layout/fragment_password_change" />
</navigation>