<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="vm"
            type="com.example.moqayda.ui.product_details.ProductDetailsViewModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProductDetailsFragment"
        android:paddingTop="30dp"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/details_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/card_view"
            app:layout_constraintEnd_toEndOf="@id/card_view"
            app:shapeAppearanceOverlay="@style/Details"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/blue"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/details_text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/details_tv"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:layout_constraintHeight_percent=".6"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                >
                <TextView
                    android:id="@+id/swap_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/swap_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/ProductDetailsTextStyle"
                    />
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.name}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/ProductDetailsTextStyle"
                    />
                <ImageView
                    android:id="@+id/swap_ic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/swap_ic"
                    />
                <TextView
                    android:id="@+id/swap_with_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/swap_ic"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/swap_with_text"
                    style="@style/ProductDetailsTextStyle"
                    />
                <TextView
                    android:id="@+id/product_name_swap_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.productToSwapWithName}"
                    app:layout_constraintTop_toTopOf="@id/swap_with_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/ProductDetailsTextStyle"
                    />
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/swap_with_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/blue"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/product_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/description_text"
                    style="@style/ProductDetailsTextStyle"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/product_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/product_desc_tv"
                    app:layout_constraintStart_toEndOf="@id/product_desc_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@{vm.description}"
                    android:fontFamily="@font/baloo_tamma_2"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_view"
            android:text="@string/swap_now_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_btn"
            android:layout_marginTop="27dp"
            android:layout_marginHorizontal="55dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>