<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.moqayda.ui.password_verification.PasswordVerificationViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.password_verification.PasswordVerificationFragment"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@drawable/background"
        >
        <com.google.android.material.internal.BaselineLayout
            android:id="@+id/baseline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="210dp"
            app:layout_constraintTop_toBottomOf="@id/verify_tv"
            />
        <TextView
            android:id="@+id/verify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            style="@style/title_tv_style"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/bomb_gw"

            />

        <TextView
            android:id="@+id/registered_mail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the code that has been sent to your email"
            app:layout_constraintTop_toBottomOf="@id/baseline"
            style="@style/sub_title_tv_style"
            android:textSize="10sp"
            android:fontFamily="@font/bomb_gw"
            />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/code_et"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/registered_mail_tv"
           app:layout_constraintStart_toStartOf="@id/registered_mail_tv"
           app:layout_constraintEnd_toEndOf="@id/registered_mail_tv"
           android:layout_marginTop="20dp"
           layout_error="@{vm.codeError}"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
           >
           <EditText
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="@string/enter_code"
               android:textSize="20sp"
               android:text="@{vm.codeError}"
               android:onTextChanged="@{(text, start, before, count) -> vm.onTextChanged(text)}"
               />
       </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/write_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/resend_code_btn"
            app:layout_constraintStart_toStartOf="@id/resend_code_btn"
            android:text="write the code before : "
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/resend_code_btn"
            app:layout_constraintStart_toEndOf="@id/write_code_tv"
            android:text="00:00"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue"
            />
        <Button
            android:id="@+id/resend_code_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/code_et"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/registered_mail_tv"
            app:layout_constraintEnd_toEndOf="@id/registered_mail_tv"
            android:text="Resend code"
            android:enabled="false"
            android:onClick="@{()->vm.resendCode()}"
            android:background="@drawable/rounded_btn"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>