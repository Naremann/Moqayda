<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.example.moqayda.models.PrivateItem" />
        <variable
            name="vm"
            type="com.example.moqayda.ui.private_product.PrivateProductViewModel" />

    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="15dp"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="10dp"


            >
            

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear_swap"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Mobil"
                android:text="@{product.privateItemName}"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="10dp"
                />
           <LinearLayout
               android:id="@+id/linear_swap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:orientation="horizontal"
               android:padding="10dp"
               android:background="@drawable/border_linear_layout"
               android:visibility="gone"
               >
               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/swap_ic"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   tools:text="Mobile"
                   android:text="@string/swap_text"
                   android:textSize="25sp"
                   android:textStyle="bold"
                   android:textColor="@color/blue"
                   android:paddingHorizontal="10dp"

                   />

           </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/product_image"
                app:layout_constraintBottom_toBottomOf="@id/product_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:background="@color/light_gray"

                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/product_image"
                app:layout_constraintBottom_toBottomOf="@id/product_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@drawable/img_furniture"
                android:layout_marginTop="5dp"
                photoUrl="@{product.privateItempathImage}"
                />
            <TextView
                android:id="@+id/product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Mobile gggggggggggggggggggggggggggggggggggggggg"
                android:text="@{product.privateItemDescriptions}"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>